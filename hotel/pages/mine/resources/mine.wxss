/**index.wxss**/
page{
  background: #f5f5f5;
}
.userinfo_box{
  background: #009afb;
  padding-top: 20rpx;
}
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo_avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
  border:6rpx solid #72d6ff;
}
.userinfo_nickname{
  color: #fff;
  font-size: 32rpx;
}
.update{
  width: 50rpx;
  height: 50rpx;
  vertical-align: middle;
  padding-left: 10rpx;
}
.open_box{
  padding: 0 30rpx;
  margin-top: 50rpx;
}
.open_vip{
  color: #0054ff;
  background: #97ddfe;
  border-radius: 10rpx 10rpx 0 0;
  font-size: 32rpx;
  padding:30rpx;
}
.hg{
  width: 34rpx;
  height: 34rpx;
  vertical-align: -3rpx;
  padding-right: 14rpx;
}
.vip_tq{
  font-weight: bold;
  margin-bottom: 14rpx;
}
.open_btn text{
  border: 1rpx solid #0054ff;
  font-size: 30rpx;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
}
.mi_list{
  padding: 26rpx 30rpx;
  font-size: 32rpx;
  background: #fff;
  color: #565656;
  margin-top: 20rpx;
  font-weight: bold;
}
.list_i{
  width: 45rpx;
  height: 45rpx;
  margin-right: 16rpx;
  transform: rotate(0);
}
.list_down{
  width: 36rpx;
  height: 36rpx;
}
.my_order{
  font-size: 28rpx;
  background: #fff;
  padding: 26rpx 30rpx;
  color: #6b6b6b;
  border-top: 1rpx solid #fafafa;
}
.roate{
  transform: rotate(-90deg);
  transition: all 0.5s;
}

.open_v_box{
  position: fixed;
  background: rgba(0,0,0,0.5);
  top: 0;
  width: 100%;
  height: 100%;
  z-index: 999;
}
.open_v{
  position: absolute;
  top: 50%;
  width:600rpx;
  background: #fff;
  left: 50%;
  margin-left: -300rpx;
  transform: translateY(-50%);
  border-radius: 16rpx;
  padding: 40rpx;
  box-sizing: border-box;
  overflow: hidden;
}
.open_t{
  text-align: center;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}
.fill_msg{
  font-size: 26rpx;
  margin-top: 26rpx;
}
.fill_msg input{
  border:1rpx solid #4384ac;
  padding-left: 20rpx;
  box-sizing: border-box;
  height: 70rpx;
  border-radius: 10rpx;
}
.gain_code{
  font-size: 26rpx;
  height: 70rpx;
  margin-left:26rpx;
  background: #009afb;
  color: #fff;
}
.sure{
  background: #009afb;
  font-size: 30rpx;
  color: #fff;
  margin-top: 40rpx;
}
.other{
  font-size:26rpx;
  text-align: center;
  color: #8a8a8a;
  margin: 40rpx 0 30rpx;
}
.get_tel{
  font-size: 32rpx;
  background: transparent;
  border: 1rpx solid #2093e6;
  color: #0098ff;
}
.colsed{
  position: absolute;
  width: 120rpx;
  height:120rpx;
  background: #00b2ff;
  border-radius: 50%;
  right: -60rpx;
  top: -60rpx;
}
.colsed:after{
  content: 'x';
  position: absolute;
  left: 26rpx;
  bottom:15rpx;
  color: #fff;
}